# 1 character
alias d="docker"
alias g="git"
alias v="vim"

# 2 character
alias dc="docker-compose"

# default
alias terminal="$TERMINAL"
alias browser="$BROWSER"
alias edit="$EDITOR"
alias ide="$IDE"
alias filer="$FILER"

# human-friendly
alias cp="cp -i"
alias df="df -h"
alias free="free -m"
alias rm="rm -i"

# replacement
alias ls="exa"
alias cat="bat"
alias less="bat"
alias du="dust"
alias ps="procs"
alias hexdump='hx'
alias time='hyperfine'
alias top='ytop'
alias ytop="btm"
alias rm="rip"
alias diff="delta"
alias dig="drill"
alias drill="dog"

# ls
alias ll="ls -alF"
alias la="ls -a"
alias lt="ls -T"
alias l1="ls -1"
alias l="clear && ll"

# xclip
alias clip="xclip -selection c"
